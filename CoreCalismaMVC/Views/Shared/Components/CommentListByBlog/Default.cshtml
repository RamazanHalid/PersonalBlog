@model List<Entities.Concrete.Comment>


<div class="comment-top">
    <h4>Yorumlar</h4>
    @if(Model.Count == 0)
            {
                <p>Bu bloğa henüz yorum yapılmadı ilk yorumu siz yapın!</p>
            }
    @foreach (var item in Model)
    {

        <div class="media">
            <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
    
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent sasdasds
                </p>
            </div>
        </div>
    }
</div>