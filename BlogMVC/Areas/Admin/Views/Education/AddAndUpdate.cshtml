@model Entities.Concrete.Education
@{
    ViewData["Title"] = "AddAndUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("AddAndUpdate", "Education", FormMethod.Post, new { @class = "m-t", area = "Admin" }))
{
    @Html.HiddenFor(m => m.EducationId)
    <div class="ibox-content ">
        <div class="row">
            <div class="col-9">
                <h2>Add New Education</h2>
            </div>
            <div style="text-align:right" class="col-3">
                <label style="margin-right:20px">Activity</label>
                @Html.CheckBoxFor(m => m.IsActive, new { @class = "js-switch" })
            </div>
        </div>
    </div>
    <br />
    <div class="ibox-content">
        <div class="modal-body">
            <div class=" row">
                <div class="form-group col-6 ">
                    <label class=" col-form-label">Title</label>
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                </div>

                <div class="form-group col-6 ">
                    <label class="font-normal">School Type</label>
                    @Html.TextBoxFor(m => m.SchoolType, new { @class = "form-control m-b" })
                </div>

            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group" id="data_1">
                        <label class="font-normal">Start Date</label>
                        <div class="input-group date">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" class="form-control" name="StartDate" value=@Model.StartDate.ToString("dd/MM/yyyy")>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group" id="data_1">
                        <label class="font-normal">End Date</label>
                        <div class="input-group date">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" class="form-control" name="EndDate" value=@Model.EndDate.ToString("dd/MM/yyyy")>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="font-normal">Content</label>
                @Html.TextAreaFor(m => m.Content, 5, 50, new { @class = "form-control" })

            </div>
            <div style="text-align:center">
                <button type="submit" class="btn btn-success" style="width:120px">Save</button>
            </div>
        </div>
        @ViewData["Message"]
    </div>
}
<script src="~/flatlab/js/jquery-3.1.1.min.js"></script>
<script src="~/flatlab/js/plugins/switchery/switchery.js"></script>
<script>
    $(document).ready(function () {

        var elem = document.querySelector('.js-switch');
        var switchery = new Switchery(elem, { color: '#1AB394' });
        var mem = $('#data_1 .input-group.date').datepicker({
            todayBtn: "linked",
            keyboardNavigation: false,
            forceParse: false,
            calendarWeeks: true,
            autoclose: true
        });
    })
</script>

