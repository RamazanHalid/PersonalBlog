@model Entities.DTOs.UserInfoForHeaderPage
<div class="home-content">
    <div class="row flex-v-align">
        <div class="col-sm-12 col-md-5 col-lg-5">
            <div class="home-photo">
                <div class="hp-inner" style="background-image: url(@Model.ProfileImage);">
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-7 col-lg-7">
            <div class="home-text hp-left">
                <div class="owl-carousel text-rotation">
                    @foreach (var item in Model.Title.Split(","))
                    {
                        <div class="item">
                            <h4>@item</h4>
                        </div>
                    }
                </div>
                <h1>@Model.FirstName  @Model.LastName </h1>
                <p> @Html.Raw(Model.AboutMeEn)</p>
                <div class="home-buttons">
                    <a href="@Model.Cv" target="_blank" class="btn btn-primary">Download CV</a>
                    <a href="#" target="_self" class="btn btn-secondary">Contact</a>
                </div>
            </div>
        </div>
    </div>
</div>